    <!-- SIDEBAR -->
    <left>
        <VBox styleClass="sidebar" alignment="TOP_CENTER">
            <Button styleClass="sidebar-button">
                <graphic>
                    <FontIcon iconLiteral="mdi-home" styleClass="sidebar-icon"/>
